<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical">

    <TextView
        android:id="@+id/jylsh"
        android:layout_width="match_parent"
        android:layout_height="@dimen/cjlb_height"
        android:background="@drawable/jylsh"
        android:gravity="center_vertical"
        android:textColor="#ffffff" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:baselineAligned="false">

        <TextView
            android:id="@+id/hphm"
            android:layout_width="0dp"
            android:layout_height="@dimen/cjlb_height"
            android:layout_weight="37"
            android:background="@drawable/hphm"
            android:gravity="center_vertical" />

        <TextView
            android:id="@+id/ccrq"
            android:layout_width="0dp"
            android:layout_height="@dimen/cjlb_height"
            android:layout_weight="42"
            android:background="@drawable/ccrq"
            android:gravity="center_vertical" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:baselineAligned="false">

        <TextView
            android:id="@+id/hpzl"
            android:layout_width="0dp"
            android:layout_height="@dimen/cjlb_height"
            android:layout_weight="37"
            android:background="@drawable/hpzl"
            android:gravity="center_vertical" />

        <TextView
            android:id="@+id/zt"
            android:layout_width="0dp"
            android:layout_height="@dimen/cjlb_height"
            android:layout_weight="42" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_dpdt_dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:baselineAligned="false">

        <TextView
            android:id="@+id/dpdt"
            android:layout_width="0dp"
            android:gravity="center_vertical"
            tools:text="底盘动太"
            android:layout_height="@dimen/cjlb_height"
            android:layout_weight="37" />

        <TextView
            android:id="@+id/dp"
            android:gravity="center_vertical"
            tools:text="底盘检测"
            android:layout_width="0dp"
            android:layout_height="@dimen/cjlb_height"
            android:layout_weight="42" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_xczd_pdzc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:baselineAligned="false">

        <TextView
            android:id="@+id/xczd"
            android:layout_width="0dp"
            tools:text="行车制动"
            android:gravity="center_vertical"
            android:layout_height="@dimen/cjlb_height"
            android:layout_weight="37" />

        <TextView
            android:id="@+id/pdzc"
            tools:text="pdzc"
            android:gravity="center_vertical"
            android:layout_width="0dp"
            android:layout_height="@dimen/cjlb_height2"
            android:layout_weight="42" />
    </LinearLayout>


    <TextView
        android:id="@+id/syr"
        android:layout_width="match_parent"
        android:layout_height="@dimen/cjlb_height"
        android:background="@drawable/syr"
        android:gravity="center_vertical"
        android:visibility="gone" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="9dp" />

</LinearLayout>